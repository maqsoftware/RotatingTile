{
  "dataRoles": [
    {
      "name": "measureData",
      "displayName": "Measures",
      "kind": "Measure"
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        {
          "measureData": {
            "min": 1,
            "max": 10
          }
        }
      ],
      "table": {
        "rows": {
          "for": {
            "in": "measureData"
          }
        }
      }
    }
  ],
  "suppressDefaultTitle": true,
  "objects": {
    "flipVertically": {
      "displayName": "Vertical flip",
      "properties": {
        "show": {
          "displayName": "Show",
          "description": "Settings to Animate the Visual Vertically",
          "type": {
            "bool": true
          }
        }
      }
    },
    "vfxSettings": {
      "displayName": "3D effect",
      "properties": {
        "show": {
          "displayName": "Show",
          "description": "Settings to show the 3D Effect box or not",
          "type": {
            "bool": true
          }
        },
        "bgColor": {
          "displayName": "Background color",
          "description": "Background Color for the 3D Effect Box",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        },
        "borderColor": {
          "displayName": "Border color",
          "description": "Border Color for the 3D Effect Box",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        }
      }
    },
    "animationSettings": {
      "displayName": "Animation settings",
      "properties": {
        "duration": {
          "displayName": "Delay (seconds)",
          "description": "Animation Delay (2 to 10 seconds)",
          "type": {
            "numeric": true
          }
        }
      }
    },
    "titleSettings": {
      "displayName": "Title settings",
      "properties": {
        "titleColor": {
          "displayName": "Title color",
          "description": "Measure Title Font Color",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        },
        "fontSize": {
          "displayName": "Title size",
          "description": "Measure Title Font Size",
          "type": {
            "formatting": {
              "fontSize": true
            }
          },
          "suppressFormatPainterCopy": true
        }
      }
    },
    "labelSettings": {
      "displayName": "Label settings",
      "properties": {
        "labelColor": {
          "displayName": "Label color",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        },
        "fontSize": {
          "displayName": "Label size",
          "description": "Measure Value Font Size",
          "type": {
            "formatting": {
              "fontSize": true
            }
          },
          "suppressFormatPainterCopy": true
        },
        "displayUnits": {
          "displayName": "Display Units",
          "description": "Measure Units to be displayed in Thousands, Millions, Billions or None",
          "type": {
            "formatting": {
              "labelDisplayUnits": true
            }
          }
        },
        "textPrecision": {
          "displayName": "Decimal Places",
          "description": "Decimal value (Max 4 Places)",
          "type": {
            "numeric": true
          }
        }
      }
    }
  }
}
